<div class="single_animal">
  <div class="row">
    <div class="col-sm-7">
      <img class="img-responsive" src="{{animal.image}}" alt="{{animal.breed}}, {{animal.species}}" />
      <h2>{{animal.name}}</h2><h4>{{animal.breed}}</h4>
    </div>
    <div class="col-sm-5">
      <h5>
        {{animal.gender}}<br>
        {{animal.age}} Years Old<br>
        ${{animal.price}}
      </h5>
    </div>
  </div>
</div>
